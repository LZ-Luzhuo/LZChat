<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/personal_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_top"
        android:background="@color/common_title_top"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/personal_return"
            android:layout_width="26dip"
            android:layout_height="26dip"
            android:layout_marginLeft="8dip"
            android:background="@drawable/btn_register_return_selector" />

        <TextView
            android:id="@+id/personal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:text="朋友圈"
            android:textColor="@color/text_white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/personal_publish"
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_marginRight="10dip"
            android:clickable="true"
            android:src="@drawable/circles_record" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </ScrollView>
</LinearLayout>