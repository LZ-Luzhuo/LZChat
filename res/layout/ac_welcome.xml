<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ac_welcome_bg"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingBottom="20dp" >

        <Button
            android:id="@+id/login_denglu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@drawable/ac_wel_login"
            android:text="登录"
            android:textColor="#ffffffff"
            tools:ignore="NewApi" />

        <Button
            android:id="@+id/login_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@drawable/ac_wel_register"
            android:text="注册"
            android:textColor="#ff6189ff" />
    </LinearLayout>

</RelativeLayout>